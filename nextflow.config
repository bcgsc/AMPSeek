/*
 * Pipeline parameters
 */
params.data_path = "$projectDir/data"
params.output_path = "$projectDir/output"
params.threads = 6

params.download_from = null
params.output_file = null
params.time = null

/*
 * Process parameters
 */
process {
    // common attributes
    withName: RUNAMPLIFY{
        container = 'quay.io/biocontainers/amplify:2.0.1--py36hdfd78af_0'
    }
    withName: RUNTAMPER{
        container = 'itsberkeucar/tamper'
    }
    withName: RUNCOLABFOLD{
        container = 'biohpc/localcolabfold:1.5'
    }
    withName: COMPILERESULTS{
        container = 'itsberkeucar/ampseek-visualization' 
    }
}

/*
 * Profiles for containers and their parameters
 */
profiles{
    singularity {
        singularity.enabled = true
        singularity.autoMounts = true
        singularity.cacheDir = '.singularity'
        singularity.libraryDir = '.singularity'
        singularity.pullTimeout = '120m'
    }
    docker {
        docker.enabled = true
        docker.autoMounts = true
        docker.cacheDir = '.docker'
        docker.libraryDir = '.docker'
        docker.pullTimeout = '120m'
    }
}

